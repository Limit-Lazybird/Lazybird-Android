<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/calenadr_day_is_today"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle"
        android:backgroundTint="@color/gray_400"
        android:visibility="invisible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/calenadr_day_is_selected"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle"
        android:backgroundTint="@color/or01"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/calendar_day_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/montserrat_400"
        android:gravity="center"
        android:textSize="15dp"
        tools:text="22" />

    <LinearLayout
        android:id="@+id/calendar_day_schedule_marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calenadr_day_is_selected"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" />

</RelativeLayout>