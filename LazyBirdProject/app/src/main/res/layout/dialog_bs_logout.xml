<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_rounded_top_30"
        android:backgroundTint="@color/gray_150"
        android:paddingLeft="16dp"
        android:paddingTop="27dp"
        android:paddingRight="22dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent">v

        <TextView
            android:id="@+id/dialog_bs_logout_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/dialog_bs_logout_title"
            android:textColor="@color/white"
            android:textSize="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/dialog_bs_logout_close"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/dialog_bs_logout_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_bs_logout_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded_10"
            android:backgroundTint="@color/gray_300"
            android:paddingTop="16dp"
            android:paddingBottom="15dp"
            android:text="@string/dialog_bs_logout_cancel"
            android:textColor="@color/white"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_bs_logout_title"
            app:layout_constraintWidth_percent="0.63" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_bs_logout_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_rounded_10"
            android:backgroundTint="@color/or01"
            android:paddingTop="16dp"
            android:paddingBottom="15dp"
            android:text="@string/dialog_bs_logout_ok"
            android:textColor="@color/white"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_bs_logout_cancel"
            app:layout_constraintWidth_percent="0.63" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>